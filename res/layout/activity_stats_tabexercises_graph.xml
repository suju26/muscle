<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/titlechartweight"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="@string/titlechartweight"
        android:textColor="@color/icon_color_blue"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/chartweight"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        />

    <TextView
        android:id="@+id/titlechartrepositions"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="@string/titlechartrepetitions"
        android:textColor="@color/icon_color_blue"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/chartrepositions"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
         />
    <TextView
        android:id="@+id/titlechartsets"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="@string/titlechartsets"
        android:textColor="@color/icon_color_blue"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/chartstets"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
         />

</LinearLayout>