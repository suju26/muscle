                android:onClick="manageDayClick"
                android:scaleType="fitCenter"
                android:src="@drawable/day11"
                android:tag="day11" />

            <ImageButton
                android:id="@+id/day12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_highlight"
                android:onClick="manageDayClick"
                android:scaleType="fitCenter"
                android:src="@drawable/day12"
                android:tag="day12" />

            <ImageButton
                android:id="@+id/day13"
                android:layout_width="0dp"
