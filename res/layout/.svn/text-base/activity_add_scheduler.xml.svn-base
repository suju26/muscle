                android:background="@drawable/bg_highlight"
                android:onClick="manageDayClick"
                android:scaleType="fitCenter"
                android:src="@drawable/day18"
                android:tag="day18" />

            <ImageButton
                android:id="@+id/day19"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_highlight"
                android:onClick="manageDayClick"
                android:scaleType="fitCenter"
                android:src="@drawable/day19"
                android:tag="day19" />

            <ImageButton
                android:id="@+id/day20"
                android:layout_width="0dp"
                android:layout_height="match_parent"
